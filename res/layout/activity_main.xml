<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/zx_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="用户名"
        android:textColor="#9b9fa8"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_login_user_name"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/selector_bg_username"
        android:hint="请输入用户名"
        android:padding="2dp"
        android:textSize="12sp"
        android:text="ddddd"
        android:paddingLeft="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="密码"
        android:textColor="#9b9fa8"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/selector_bg_password"
        android:hint="密码"
        android:inputType="numberPassword"
        android:padding="5dp"
        android:textSize="12sp"
        android:paddingLeft="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="10dp" >

    <CheckBox
        android:layout_alignParentLeft="true"
        android:id="@+id/cb_is_remeber"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:textColor="#9bc4e0"
        android:textSize="14sp" />
    <TextView 
        android:id="@+id/tv_changeip"
        android:layout_alignParentRight="true"
        android:text="更改IP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#9bc4e0"
        android:layout_centerVertical="true"
        />
    </RelativeLayout>


    <ImageView
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/selector_btn_login" />

</LinearLayout>